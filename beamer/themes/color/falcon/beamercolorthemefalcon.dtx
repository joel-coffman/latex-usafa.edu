% \subsection{Theme}
% Override colors used by Beamer's color palettes.
%
% \mintinline{latex}{normal text} defines the most basic style for a presentation when another color palette does not apply.
%    \begin{macrocode}
\setbeamercolor{normal text}{
%    \end{macrocode}
% Use black foreground. \testcolor{Falcon 2000 Black}
% \mintinline{latex}{black} could be used instead, but
% \mintinline{latex}{Falcon 2000 Black} appears in the official color palette.
%    \begin{macrocode}
  fg=Falcon 2000 Black,
}
%    \end{macrocode}
%
% \mintinline{latex}{alerted text} is red. \testcolor{Class Red}
%    \begin{macrocode}
\setbeamercolor{alerted text}{
  fg=Class Red,
}
%    \end{macrocode}
%
% \mintinline{latex}{example text} is royal blue. \testcolor{Class Royal}
%    \begin{macrocode}
\setbeamercolor{example text}{
  fg=Class Royal,
}
%    \end{macrocode}
%
% The \mintinline{latex}{structure} color palette is derived from a medium blue. \testcolor{Falcon 2000 Blue}
% Shades of this color are used for most elements in the presentation.
%    \begin{macrocode}
\setbeamercolor{structure}{
  fg=Falcon 2000 Blue,
}
