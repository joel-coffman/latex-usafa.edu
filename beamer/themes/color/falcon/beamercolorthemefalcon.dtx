\definecolor{Pantone 877}{cmyk/RGB}{0.45,0.34,0.34,0.00/138,141,143}

\definecolor{Pantone Cool Gray 5}{cmyk/RGB}{0.13,0.09,0.10,0.27/177,179,179}
\definecolor{Pantone Process Black}{cmyk/RGB}{0.00,0.00,0.00,1.00/39,37,31}
