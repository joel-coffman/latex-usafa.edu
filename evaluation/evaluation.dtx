  \begin{tikzpicture}
%    \end{macrocode}
%  Define the \textsf{pgfplots} axis.
%    \begin{macrocode}
    \begin{axis}[
        xbar,
        axis x line=bottom,
        axis y line=left,
        axis line style={-},
        bar width=0.67\baselineskip,
        cycle list/Set1-9,
        cycle list name=Set1-9,
        enlarge y limits=0.25,
        every axis plot/.append style={
          bar shift=0pt,
          draw,
          fill,
          fill opacity=0.9,
        },
        height=1.25in,  % TODO: Scale based on height of responses
        minor x tick num=1,
        typeset ticklabels with strut,  % ensure tick labels are aligned
        % TODO: scale exactly (see https://tex.stackexchange.com/q/36297)
        width=\linewidth - 45pt,  % 45pt is size of axis and tick labels
        xlabel=Mean of Responses,
        xlabel style={
          font=\footnotesize,
          yshift=1ex,
        },
        xmin=0,
        xmax=6,
        xticklabel style={
          font=\scriptsize,
        },
        ytick distance=1,
        yticklabel style={
          font=\footnotesize,
        },
        nodes near coords={%
          \pgfmathprintnumber[
              fixed zerofill,
              precision=3,
          ]\pgfplotspointmeta%
        },
        every node near coord/.append style={
          color=black,
          font=\scriptsize,
          opacity=0.85,
          yshift=0.75ex,
        },
        nodes near coords align={horizontal},
        \evaluation@barplot@axis,
        #1
    ]
%    \end{macrocode}
